<%= form_with model: @brief_note, local: true do |f| %>
    <div class="form-group mt-4 mb-3">
      <%= f.label :title, "タイトル" %><br>
      <%= f.text_field :title  %>
    </div>
    <div class="form-group mt-3 mb-3">
      <%= f.label :body, "メモ" %><br>
      <%= f.text_field :body %>
    </div>
    <div class="form-group mt-sm-4">
      <%= f.submit class: 'btn btn-outline-primary' %>
    </div>
<% end %>