<div class="text-center m-sm-3">
  <h1 class="myFont mt-sm-2">簡易メモ詳細画面</h1>
      <td><%= link_to '編集する', edit_brief_note_path(@brief_note), class: 'syousai' %></td>
      <td><%= link_to '振り譜一覧に戻る', brief_notes_path, class: 'syousai' %></td>
      <td><%= link_to '削除する', @brief_note, method: :delete, data: { confirm: '削除しますか?' }, class: 'syousai' %></td>
  </div>
</div>

<div class="container col-8">
  <div style="background-color:#EDF7FF;">
    <div class="row">
      <div class="col-md">

        <div class="form-group m-sm-3">
          <div style="color: #00A2A4;">
            <%="タイトル:"%>
          </div>
          <div><%= @brief_note.title %></div>
        </div>

        <div class="form-group m-sm-3">
          <div style="color: #00A2A4;">
            <%="簡易メモ:"%>
          </div>
          <div><%= @brief_note.body %></div>
        </div>
      </div>
    </div>
  </div>
</div>
