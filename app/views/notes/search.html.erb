<h1>検索結果</h1>
<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :song_title, "song_title", hide_indicator: true) %></th>
      <th><%= sort_link(@q, :singer_name, "singer_name", hide_indicator: true) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |note| %>
      <tr>
        <td><%= note.song_title %></td>
        <td><%= note.singer_name %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '一覧', notes_path %>