<%= form_with model: note, local: true do |f| %>
  <%= render 'shared/flash', object: f.object %>
    <div class="form-group mt-3 mb-3">
      <%= f.label :song_title, t('.song_title') %><br>
      <%= f.text_field :song_title  %>
    </div>
    <div class="form-group mt-3 mb-3">
      <%= f.label :singer_name, t('.singer_name') %><br>
      <%= f.text_field :singer_name  %>
    </div>
    <div class="form-group mt-3 mb-3">
      <%= f.label :hashbody, t('.hashbody') %><br>
      <%= f.text_area :hashbody, size:"55x3" %>
    </div>
    <div class="field">
      <%= f.label :content %>
      <%= f.rich_text_area :content %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
<% end %>